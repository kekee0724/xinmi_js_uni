/* pages/search/search.wxss */
.page-body {
    background-color: #ffffff;
}
.select-list .select-item {
    padding: 40rpx 30rpx;
}
.select-list .select-item .title {
    font-size: 36rpx;
    font-weight: bold;
}
.select-list .select-item .body {
    margin: 20rpx -6rpx 0;
}
.select-list .select-item .body .tag {
    display: inline-block;
    height: 86rpx;
    background-color: rgba(249, 249, 249, 1);
    color: rgba(0, 0, 0, 0.5);
    width: calc(33.3333333% - 12rpx);
    margin: 6rpx;
    text-align: center;
    line-height: 86rpx;
    border-radius: 12rpx;
}
.select-list .select-item .body .tag.active {
    background-color: #3399ff;
    color: #ffffff;
}

