/* pages/details/details.wxss */
.header-banner {
    height: 480rpx;
    position: relative;
}
.vr-box {
    position: absolute;
    width: 232rpx;
    height: 80rpx;
    bottom: 30rpx;
    right: 30rpx;
    border-radius: 85rpx;
    background: #8a11d6a1;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}
.vr-box image {
    width: 100rpx;
    height: 40rpx;
    margin-right: 15rpx;
}
.tabset {
    position: relative;
    text-align: left;
    background-color: #fff;
    font-size: 32rpx;
}
.weui-cells__title {
    background-color: #fff;
    position: relative;
    margin: 0;
    padding: 30rpx 30rpx 20rpx 50rpx;
    font-size: 36rpx;
    color: #000000;
    font-weight: bold;
}
.weui-cells__title::after {
    content: '';
    width: 8rpx;
    height: 40rpx;
    background-color: #3399ff;
    position: absolute;
    border-radius: 45rpx;
    left: 30rpx;
    top: 40rpx;
}
.not-border:before {
    content: none;
    opacity: 0 !important;
}
.flex.start {
    align-items: flex-start;
}
.ent-list {
    position: relative;

    font-size: 28rpx;
    padding-left: 20rpx;
    margin-top: 20rpx;
    max-height: 300rpx;
    overflow-y: auto;
    width: 100%;
}
.ent-list .item {
    font-size: 28rpx;
    color: #999998;
    padding: 20rpx 0;
}
.map_container {
    position: relative;
    width: 100%;
    height: 445px;
}
.map {
    width: 100%;
    height: 100%;
}

